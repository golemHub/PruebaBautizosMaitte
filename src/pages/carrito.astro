---
import Layout from "../layouts/Layout.astro"
import Cart from "../components/Cart.tsx"
---

<Layout title="Carrito de Compras">
  <main>
    <div class="page-header">
      <h1>Carrito de Compras</h1>
    </div>

    <Cart client:load />
  </main>
</Layout>

<style>
  main {
    max-width: 1400px;
    margin: 0 auto;
    padding: 4rem 2rem;
    padding-top: calc(4rem + 84px); /* Ajuste para el header fijo */
  }

  .page-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .page-header h1 {
    font-family: var(--font-heading);
    font-size: 3.5rem;
    font-weight: 400;
    color: var(--color-charcoal);
    margin-bottom: 1rem;
  }
</style>
