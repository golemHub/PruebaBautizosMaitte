---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <!-- Contact Hero -->
  <section class="contact-hero">
    <h1>Estamos aquí para <em>ayudarte</em></h1>
    <p>
      ¿Tienes alguna pregunta? Nuestro equipo está listo para hacer de tu
      celebración algo inolvidable.
    </p>
  </section>

  <!-- Contact Section -->
  <section class="contact-section">
    <div class="contact-grid">
      <!-- Contact Info -->
      <div class="contact-info">
        <h2>Información de Contacto</h2>

        <div class="info-item">
          <div class="info-icon">
            <svg
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
              <circle cx="12" cy="10" r="3"></circle>
            </svg>
          </div>
          <div class="info-content">
            <h3>Dirección</h3>
            <p>
              Benavente 440<br />
              Ovalle, Chile
            </p>
          </div>
        </div>

        <div class="info-item">
          <div class="info-icon">
            <svg
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
              ></path>
            </svg>
          </div>
          <div class="info-content">
            <h3>Teléfono</h3>
            <p>
              <a href="tel:+56912345678">+56 9 5396 2462</a><br />
            </p>
          </div>
        </div>

        <div class="info-item">
          <div class="info-icon">
            <svg
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <rect x="2" y="4" width="20" height="16" rx="2"></rect>
              <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
            </svg>
          </div>
          <div class="info-content">
            <h3>Email</h3>
            <p>
              <a href="mailto:info@bendicion.cl">ventas@bautizosmaitte.com</a><br />
            </p>
          </div>
        </div>

        <div class="info-item">
          <div class="info-icon">
            <svg
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <circle cx="12" cy="12" r="10"></circle>
              <path d="M12 6v6l4 2"></path>
            </svg>
          </div>
          <div class="info-content">
            <h3>Horario de Atención</h3>
            <p>
              Lunes a Viernes: 10:00 - 20:00<br />
              Sábados: 10:00 - 18:00<br />
            </p>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="contact-form">
        <h2>Envíanos un Mensaje</h2>
        <form>
          <div class="form-row">
            <div class="form-group">
              <label>Nombre <span>*</span></label>
              <input type="text" required />
            </div>
            <div class="form-group">
              <label>Apellido <span>*</span></label>
              <input type="text" required />
            </div>
          </div>

          <div class="form-row">
            <div class="form-group">
              <label>Email <span>*</span></label>
              <input type="email" required />
            </div>
            <div class="form-group">
              <label>Teléfono</label>
              <input type="tel" />
            </div>
          </div>

          <div class="form-group">
            <label>Asunto <span>*</span></label>
            <select required>
              <option value="">Selecciona un asunto</option>
              <option value="consulta">Consulta General</option>
              <option value="pedido">Estado de Pedido</option>
              <option value="producto">Información de Producto</option>
              <option value="evento">Asesoría para Evento</option>
              <option value="otro">Otro</option>
            </select>
          </div>

          <div class="form-group">
            <label>Mensaje <span>*</span></label>
            <textarea required></textarea>
          </div>

          <button type="submit" class="submit-btn">Enviar Mensaje</button>
        </form>
      </div>
    </div>
  </section>

  <!-- Hours Section -->
  <section class="hours-section">
    <h2>Visítanos en Nuestra Tienda</h2>
    <div class="hours-grid">
      <div class="hours-item">
        <h3>Lunes a Viernes</h3>
        <p>10:00 AM - 8:00 PM</p>
      </div>
      <div class="hours-item">
        <h3>Sábados</h3>
        <p>10:00 AM - 6:00 PM</p>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="map-section">
    <div class="map-container">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3451.234567890123!2d-71.19951234567890!3d-30.59876543210987!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMzDCsDM1JzU1LjYiUyA3McKwMTEnNTguMiJX!5e0!3m2!1ses!2scl!4v1234567890123!5m2!1ses!2scl"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
  </section>
</Layout>

<style>
  /* Contact Hero */
  .contact-hero {
    padding: 10rem 2rem 4rem;
    text-align: center;
    background: linear-gradient(
      to bottom,
      var(--color-cream) 0%,
      var(--color-white) 100%
    );
    border-bottom: 1px solid var(--color-gold-light);
  }

  .contact-hero h1 {
    font-family: var(--font-heading);
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 400;
    line-height: 1.2;
    color: var(--color-charcoal);
    margin-bottom: 1rem;
    letter-spacing: 0.02em;
  }

  .contact-hero h1 em {
    color: var(--color-gold);
    font-style: italic;
  }

  .contact-hero p {
    font-size: 1rem;
    color: var(--color-gray);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
    font-weight: 300;
  }

  /* Contact Section */
  .contact-section {
    padding: 6rem 2rem;
    max-width: 1400px;
    margin: 0 auto;
    background: #f5f5f5;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: start;
  }

  /* Contact Info */
  .contact-info {
    background: var(--color-white);
    padding: 3rem;
    border: 1px solid var(--color-gold-light);
    border-radius: 4px;
  }

  .contact-info h2 {
    font-family: var(--font-heading);
    font-size: 2rem;
    font-weight: 600;
    color: var(--color-charcoal);
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid var(--color-gold);
  }

  .info-item {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 2rem;
    align-items: flex-start;
  }

  .info-icon {
    width: 50px;
    height: 50px;
    background: var(--color-gold-light);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    border: 2px solid var(--color-gold);
  }

  .info-icon svg {
    color: var(--color-gold);
  }

  .info-content h3 {
    font-family: var(--font-heading);
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--color-charcoal);
    margin-bottom: 0.5rem;
  }

  .info-content p {
    color: var(--color-gray);
    font-size: 0.95rem;
    line-height: 1.6;
  }

  .info-content a {
    color: var(--color-gold);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .info-content a:hover {
    color: var(--color-charcoal);
  }

  /* Contact Form */
  .contact-form {
    background: var(--color-white);
    padding: 3rem;
    border: 1px solid var(--color-gold-light);
    border-radius: 4px;
  }

  .contact-form h2 {
    font-family: var(--font-heading);
    font-size: 2rem;
    font-weight: 600;
    color: var(--color-charcoal);
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid var(--color-gold);
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-group label {
    display: block;
    font-size: 0.85rem;
    font-weight: 500;
    color: var(--color-charcoal);
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .form-group label span {
    color: var(--color-gold);
  }

  .form-group input,
  .form-group textarea,
  .form-group select {
    width: 100%;
    padding: 0.75rem 1.2rem;
    border: 2px solid var(--color-gold-light);
    background: var(--color-cream);
    font-family: var(--font-body);
    font-size: 0.95rem;
    color: var(--color-charcoal);
    transition: all 0.3s ease;
  }

  .form-group input:focus,
  .form-group textarea:focus,
  .form-group select:focus {
    outline: none;
    border-color: var(--color-gold);
    background: var(--color-white);
    box-shadow: 0 0 0 3px rgba(201, 169, 98, 0.1);
  }

  .form-group textarea {
    resize: vertical;
    min-height: 150px;
  }

  .submit-btn {
    background: var(--color-gold);
    color: var(--color-white);
    padding: 1.25rem 3rem;
    border: 2px solid var(--color-gold);
    font-family: var(--font-body);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    cursor: pointer;
    transition: all 0.3s ease;
    width: 100%;
  }

  .submit-btn:hover {
    background: var(--color-charcoal);
    color: var(--color-white);
    border-color: var(--color-charcoal);
  }

  /* Map Section */
  .map-section {
    padding: 6rem 2rem;
    max-width: 1400px;
    margin: 0 auto;
    background: var(--color-white);
  }

  .map-container {
    background: var(--color-white);
    border: 1px solid var(--color-gold-light);
    overflow: hidden;
    height: 500px;
    box-shadow: 0 4px 20px rgba(201, 169, 98, 0.1);
  }

  .map-container iframe {
    width: 100%;
    height: 100%;
    border: none;
  }

  /* Hours Section */
  .hours-section {
    padding: 4rem 2rem;
    background: var(--color-cream);
    text-align: center;
  }

  .hours-section h2 {
    font-family: var(--font-heading);
    font-size: 2.5rem;
    font-weight: 600;
    color: var(--color-charcoal);
    margin-bottom: 3rem;
  }

  .hours-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    max-width: 900px;
    margin: 0 auto;
  }

  .hours-item {
    background: var(--color-white);
    padding: 2.5rem 2rem;
    border: 1px solid var(--color-gold-light);
    box-shadow: 0 2px 10px rgba(201, 169, 98, 0.08);
    transition: all 0.3s ease;
  }

  .hours-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 4px 20px rgba(201, 169, 98, 0.15);
    border-color: var(--color-gold);
  }
</style>
