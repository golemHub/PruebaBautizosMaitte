---
import Layout from "../../layouts/Layout.astro";
import { GetProductsAll } from "../../api/GetProductsAll";
import AddToCartButton from "../../components/AddToCartButton.tsx";
import FavoriteButton from "../../components/FavoriteButton.tsx";
import type { Product } from "../../types/Products.ts";

export async function getStaticPaths() {
  try {
    const products = await GetProductsAll({ pageSize: 1000 });
    return products.data
      .filter(
        (product: Product) => product.slug && typeof product.slug === "string",
      )
      .map((product: Product) => ({
        params: { slug: product.slug },
        props: { product },
      }));
  } catch (error) {
    console.error("Error generating static paths:", error);
    return [];
  }
}

const { product } = Astro.props;

if (!product) {
  return Astro.redirect("/404");
}

// Obtener productos relacionados
const relatedProducts = await GetProductsAll({
  category: product.categories?.[0]?.slug,
  pageSize: 5, // Pedimos 5 para asegurar que al filtrar el actual nos queden 4
});

const formatter = new Intl.NumberFormat("es-CL", {
  style: "currency",
  currency: "CLP",
});

const formattedPrice = formatter.format(product.price);
const finalPrice =
  product.isDiscount && product.priceDiscount
    ? product.priceDiscount
    : product.price;
---

<Layout
  title={product.name}
  description={product.description ||
    `Descubre ${product.name}, ideal para bautizos.`}
  image={product.mainImage?.url || "https://bautizosmaitte.com/Logo.jpg"}
>
  <section class="product-section">
    <div class="breadcrumb">
      <a href="/">Inicio</a>
      <span>/</span>
      <a href="/productos">Productos</a>
      {
        product.categories?.[0] && (
          <>
            <span>/</span>
            <a href={`/categorias/${product.categories[0].slug}`}>
              {product.categories[0].name}
            </a>
          </>
        )
      }
      <span>/</span>
      <span>{product.name}</span>
    </div>

    <div class="product-content">
      <div class="product-gallery">
        <div class="thumbnail-list">
          {
            product.images?.slice(0, 4).map((image, index) => (
              <div class={`thumbnail ${index === 0 ? "active" : ""}`}>
                <img
                  src={image.url}
                  alt={image.alternativeText || product.name}
                />
              </div>
            ))
          }
        </div>
        <div class="main-image">
          <img
            src={product.mainImage?.url || "/placeholder.svg"}
            alt={product.name}
          />
        </div>
      </div>

      <div class="product-info">
        <p class="product-category">
          {product.categories?.[0]?.name || "Colección Bautizo"}
        </p>
        <h1 class="product-title">{product.name}</h1>

        <div class="product-rating">
          <div class="stars">
            {
              [...Array(5)].map(() => (
                <svg
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                >
                  <path d="m12 2 3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
                </svg>
              ))
            }
          </div>
          <span class="rating-count">(127 reseñas)</span>
        </div>

        <p class="product-price">
          {
            product.isDiscount && product.priceDiscount
              ? formatter.format(product.priceDiscount)
              : formattedPrice
          }
        </p>

        <p class="product-description">{product.description}</p>

        <div class="product-options">
          {
            product.product_variants && product.product_variants.length > 0 && (
              <div class="option-group">
                <label class="option-label">Tallas Disponibles</label>
                <div class="option-buttons">
                  {product.product_variants.map((variant) => (
                    <button class="option-btn">{variant.name}</button>
                  ))}
                </div>
              </div>
            )
          }
        </div>

        <div class="product-actions">
          <div class="product-actions-row">
            <AddToCartButton product={product} client:load />
            <div class="favorite-button-wrapper">
              <FavoriteButton product={product} client:load />
            </div>
          </div>
        </div>

        <div class="product-features">
          <div class="feature-item">
            <svg
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              ><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"
              ></path><circle cx="12" cy="10" r="3"></circle></svg
            >
            <span>Envío a todo Chile</span>
          </div>
          <div class="feature-item">
            <svg
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              ><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10"></path></svg
            >
            <span>Calidad Premium Certificada</span>
          </div>
        </div>
      </div>
    </div>

    <div class="product-tabs">
      <div class="tab-buttons">
        <button class="tab-btn active">Descripción</button>
        <button class="tab-btn">Cuidados</button>
      </div>
      <div class="tab-content active">
        <p>{product.description}</p>
        <p>
          Este producto forma parte de nuestra colección exclusiva de Bautizos
          Maitte, fabricado con materiales delicados para la piel de los más
          pequeños.
        </p>
      </div>
    </div>

    {
      relatedProducts.data.length > 0 && (
        <div class="related-products">
          <h2 class="section-title">También te Puede Gustar</h2>
          <div class="products-grid">
            {relatedProducts.data
              .filter((p) => p.id !== product.id)
              .slice(0, 4)
              .map((item) => (
                <a href={`/productos/${item.slug}`} class="product-card">
                  <div class="product-image">
                    <img
                      src={item.mainImage?.url || "/placeholder.svg"}
                      alt={item.name}
                    />
                  </div>
                  <div class="product-card-info">
                    <p class="product-card-category">
                      {item.categories?.[0]?.name}
                    </p>
                    <h4 class="product-card-name">{item.name}</h4>
                    <p class="product-card-price">
                      {formatter.format(item.price)}
                    </p>
                  </div>
                </a>
              ))}
          </div>
        </div>
      )
    }
  </section>

  <script
    type="application/ld+json"
    set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Product",
      name: product.name,
      image: product.mainImage?.url,
      description: product.description,
      offers: {
        "@type": "Offer",
        price: finalPrice,
        priceCurrency: "CLP",
        availability:
          product.count > 0
            ? "https://schema.org/InStock"
            : "https://schema.org/OutOfStock",
      },
    })}
  />
</Layout>

<style>
  /* Variables de color basadas en tu diseño premium */
  :root {
    --gold: #c9a96e;
    --gold-light: #e8dcc8;
    --cream: #faf8f5;
    --charcoal: #333333;
    --gray: #666666;
    --gray-light: #999999;
    --white: #ffffff;
  }

  .product-section {
    max-width: 1400px;
    margin: 0 auto;
    padding: 4rem 2rem;
  }

  .breadcrumb {
    margin-bottom: 2rem;
    display: flex;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--gray);
  }

  .breadcrumb a {
    color: var(--gray);
    text-decoration: none;
    transition: color 0.3s;
  }
  .breadcrumb a:hover {
    color: var(--gold);
  }

  .product-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    margin-bottom: 6rem;
  }

  /* Gallery */
  .product-gallery {
    display: flex;
    gap: 1rem;
  }
  .thumbnail-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .thumbnail {
    width: 80px;
    height: 100px;
    border: 2px solid transparent;
    cursor: pointer;
    overflow: hidden;
    background: var(--cream);
  }
  .thumbnail.active {
    border-color: var(--gold);
  }
  .thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .main-image {
    flex: 1;
    aspect-ratio: 3/4;
    overflow: hidden;
    background: var(--cream);
  }
  .main-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Info */
  .product-title {
    font-family: "Cormorant Garamond", serif;
    font-size: 2.5rem;
    font-weight: 600;
    color: var(--charcoal);
    margin-bottom: 1rem;
  }
  .product-category {
    font-size: 0.75rem;
    text-transform: uppercase;
    color: var(--gray-light);
    margin-bottom: 0.5rem;
  }
  .product-rating {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }
  .stars {
    color: var(--gold);
    display: flex;
    gap: 2px;
  }
  .product-price {
    font-size: 2rem;
    font-weight: 600;
    color: var(--gold);
    margin-bottom: 1.5rem;
  }
  .product-description {
    color: var(--gray);
    line-height: 1.8;
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--gold-light);
  }

  /* Buttons & Options */
  .option-label {
    display: block;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    margin-bottom: 0.75rem;
  }
  .option-btn {
    padding: 0.75rem 1.5rem;
    border: 1px solid var(--gold-light);
    background: var(--white);
    cursor: pointer;
    transition: all 0.3s;
  }
  .option-btn:hover {
    border-color: var(--gold);
    background: var(--gold);
    color: white;
  }

  .product-actions {
    margin-bottom: 2rem;
  }

  .product-actions-row {
    display: flex;
    gap: 1rem;
    align-items: center;
  }

  .favorite-button-wrapper {
    display: flex;
    align-items: center;
  }

  .favorite-button-wrapper :global(.favorite-btn) {
    width: 56px;
    height: 56px;
    background: var(--white);
    border: 1px solid var(--gold-light);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s;
    padding: 0;
  }

  .favorite-button-wrapper :global(.favorite-btn:hover) {
    background: var(--gold);
    border-color: var(--gold);
  }

  .favorite-button-wrapper :global(.favorite-btn:hover svg) {
    fill: var(--white);
    stroke: var(--white);
  }

  .favorite-button-wrapper :global(.favorite-btn.active) {
    background: var(--gold);
    border-color: var(--gold);
  }

  .favorite-button-wrapper :global(.favorite-btn.active svg) {
    fill: var(--white);
    stroke: none;
  }

  .product-features {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding-top: 2rem;
    border-top: 1px solid var(--gold-light);
  }
  .feature-item {
    display: flex;
    gap: 1rem;
    align-items: center;
    font-size: 0.875rem;
    color: var(--gray);
  }
  .feature-item svg {
    color: var(--gold);
  }

  /* Tabs */
  .product-tabs {
    border-top: 1px solid var(--gold-light);
    margin-bottom: 6rem;
  }
  .tab-buttons {
    display: flex;
    gap: 3rem;
    border-bottom: 1px solid var(--gold-light);
  }
  .tab-btn {
    padding: 1.5rem 0;
    background: none;
    border: none;
    font-weight: 600;
    text-transform: uppercase;
    color: var(--gray);
    cursor: pointer;
  }
  .tab-btn.active {
    color: var(--charcoal);
    border-bottom: 2px solid var(--gold);
  }
  .tab-content {
    padding: 2rem 0;
  }

  /* Grid Related */
  .products-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
  }
  .product-card {
    text-decoration: none;
    border: 1px solid var(--gold-light);
    transition: all 0.3s;
  }
  .product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(201, 169, 110, 0.15);
  }
  .product-card-info {
    padding: 1.5rem;
  }
  .product-card-name {
    font-family: "Cormorant Garamond", serif;
    font-size: 1.25rem;
    color: var(--charcoal);
  }

  @media (max-width: 768px) {
    .product-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    .products-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
